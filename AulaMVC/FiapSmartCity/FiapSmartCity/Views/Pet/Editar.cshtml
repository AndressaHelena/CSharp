@model FiapSmartCity.Models.Pet
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Pet - Editar</title>
</head>
<body>
    <h1>Editar  nome do Pet</h1>

    <!-- formulário HTML com Tag Helpers-->
    <form asp-action="Editar" asp-controller="Pet" method="post">
        <!-- Campo oculto para guardar qual Id (chave) do registro alterado -->
        <input type="hidden" asp-for="IdPet" />
        <div class="form-horizontal">
            <hr />

            <div class="form-group">
                <label>Nome do Pet</label>
                <div class="col-md-10">
                    <!-- Caixa de Texto -->
                    <input asp-for="NomePet" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="reset" value="Limpar" class="btn btn-secondary mt-3 btn-default" />
                    <!-- HTML Simple para envio dos dados do formulário -->
                    <input type="submit" value="Gravar Alteração" class="btn btn-success mt-3 btn-default" />
                </div>
            </div>
            <hr />
        </div>
    </form>

    <div>
        <a asp-controller="Pet" asp-action="Index" class="btn btn-warning">Voltar</a>
    </div>

</body>
</html>