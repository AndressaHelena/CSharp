
@model IEnumerable<FiapSmartCity.Models.Pessoa>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title> Cadastrar Pessoa</title>
</head>
<body>
    <h1>Cadastrar Pessoa</h1>
    <p>
        <!-- uso de TagHelpers para definir o Controller e a Action -->
        <a asp-controller="Pessoa" asp-action="Cadastrar" class="btn btn-success">Novo Cadastro</a>
    </p>

    <!-- Verifica se a chave "Mensagem" existe no TempData -->
    @if (@TempData["Mensagem"] != null)
    {
                <div class="alert alert-success" role="alert">
                    <!-- Imprime para o usuário a mensagem -->
        @TempData["Mensagem"]
                </div>
    }


    <table class="table table-striped" border="1">
        <tr>
            <th>Id</th>
            <th>Nome da Pessoa</th>
            <th>Endereço</th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <label>@item.IdPessoa</label>
                </td>
                <td>
                    <label>@item.NomePessoa</label>
                </td>
                <td>
                    <label>@item.AddressPessoa</label>
                </td>
                <td>
                     <!-- asp-route-id é usado para informar o Id do Item selecionado. -->
                    <a asp-controller="Pessoa" asp-action="Editar"
                    asp-route-id="@item.IdPessoa" class="btn btn-warning">Editar</a>

                    <a asp-controller="Pessoa" asp-action="Consultar"
                    asp-route-id="@item.IdPessoa" class="btn btn-info">Exibir</a>

                    <a asp-controller="Pessoa" asp-action="Excluir"
                    asp-route-id="@item.IdPessoa" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </table>
</body>
</html>
